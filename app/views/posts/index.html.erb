<div class="container">
  <h1 class="my-4 text-center">Últimos Posts</h1>

  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= link_to post.title, post_path(post) %></h5>
            <p class="card-text"><%= truncate(post.content, length: 100) %></p>
            <p class="text-muted"><small>Por <%= post.user.email %>, há <%= time_ago_in_words(post.created_at) %></small></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <%= paginate @posts, theme: 'bootstrap-4' %>
</div>
